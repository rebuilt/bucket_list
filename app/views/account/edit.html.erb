<main>
  <div class="content-wrapper">
    <nav>
      <ul class="sub-navigation">
        <li><a href="#nolink" class="current">Account</a></li>
        <li><a href="#nolink">Goals</a></li>
        <li><a href="#nolink">Ideas</a></li>
        <li><a href="#nolink">Following</a></li>
      </ul>
    </nav>
    <h1>Account details</h1>
    <%= form_for(current_user, url: account_path, html: {class: 'form--inpage'}) do |form| %>
      <div class="input-group input-group--horizontal">
        <%= form.label(:email, 'Email', class: 'input-group__label')%>
        <%= form.text_field(:email, class: 'input-group__field')%>
      </div>
      <div class="input-group input-group--horizontal">
        <%= form.label(:name, 'Name', class: 'input-group__label')%>
        <%= form.text_field(:name, class: 'input-group__field')%>
      </div>
      <div class="input-group input-group--horizontal">
        <%= form.label(:avatar_url, 'Avatar URL', class: 'input-group__label')%>
        <%= form.text_field(:avatar_url, class: 'input-group__field')%>
      </div>
      <div class="prompt">
        <a class="prompt__cancel" href="#cancel">Cancel</a>
      <%= form.submit('Update account', class: 'btn btn--primary') %>
      </div>
  <% end %>
  </div>
</main>
