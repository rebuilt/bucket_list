<main>
  <div class="content-wrapper">
    <%= render(partial: 'sub_navigation')%>
  </div>
  <div class="content-wrapper">
    <div class="page-header">
      <h1>My Idea</h1>
      <%= link_to('Create Idea', new_idea_path , class: 'btn ') %>
    </div>
  </div>
  <div class="content-wrapper">
    <ul class="bare-list float-grid css-grid">
      <% @ideas.each do |idea| %>
        <li>
          <%= render(partial: 'idea_card_editable', locals: { title: idea.title, done_count: idea.done_count, photo_url: idea.photo_url, idea: idea}) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
