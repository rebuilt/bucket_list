<main>
  <div class="content-wrapper">
    <h1>Results for "everything"</h1>
  </div>
  <div class="content-wrapper">
    <% if(@ideas.any? ) %> 
    <div>
      <p>Search completed using "<%= @search_term %>".</p>
    </div>
    <ul class="bare-list float-grid css-grid">
      <% @ideas.each do |idea| %>
      <li>
        <%= render(partial: 'idea_card', locals: { title: idea.title,
        done_count: idea.done_count, photo_url: idea.photo_url, idea: idea}) %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="see-more">
    <%= paginate @ideas %>
    <% else %>
    <h3>No ideas found!</h3>
    <% end %>
  </div>
</main>
