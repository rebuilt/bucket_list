<main>
  <div class="content-wrapper">
    <h1>Results for "everything"</h1>
  </div>
  <div class="content-wrapper">
    <div>
      <p> Search completed using "<%= @search_term %>". </p>
    </div>
    <ul class="bare-list float-grid css-grid">
      <% @ideas.each do |idea| %>
        <li>
      <%= render(partial: 'idea_card', locals: {title: idea.title, done_count: idea.done_count, editable: false})          %>
    </li> 
  <% end  %>
    </ul>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
