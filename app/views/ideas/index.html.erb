<main>
  <div class="content-wrapper">
    <h1>Results for "everything"</h1>
  </div>
  <div class="content-wrapper">
    <div>
      <p> Search completed using "<%= @search_term %>". </p>
    </div>
    <ul class="bare-list float-grid css-grid">
      <% activities =  @ideas %>
      <% activities.each do |activity| %>
        <li>
      <%= render(partial: 'idea_card', locals: {title: activity.title})          %>
    </li> 
  <% end  %>
    </ul>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
