
<main>
  <div class="content-wrapper">
    <h1>Create new idea</h1>
    <%= form_tag('/ideas/create', method: :post, class: 'form--inpage', locals: {title: "Title"} ) do  %>
      <div class="input-group input-group--horisontal">
        <label class="input-group__label" for="title">Title</label>
        <%= text_field_tag('title' , nil, placeholder: 'E.g. Ride a camel', class: 'input-group__field')  %>
      </div>
      <div class="input-group input-group--horisontal">
        <label class="input-group__label" for="done_count">Done Count</label>
        <%= text_field_tag('done_count' , nil,  class: 'input-group__field')  %>
      </div>
<div class="input-group input-group--horisontal">
        <label class="input-group__label" for="photo_url">Photo Url</label>
        <%= text_field_tag('photo_url' , nil,  class: 'input-group__field')  %>
      </div>
      <div class="prompt">
        <a class="prompt__cancel" href="#cancel">Cancel</a>
        <%= button_tag('Update Profile', class: 'btn btn--primary prompt__confirm')  %>
      </div>

    <%  end  %>
  </div>
</main>
