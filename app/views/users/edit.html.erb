<main>
  <section class="envelope">
    <header class="text--center">
      <h1 class="gamma">Edit user information</h1>
    </header>

    <main>
      <% if(@user.errors.any?) %>
      <div class="alert alert--wide">
        <%= @user.errors.full_messages.join('<br />').html_safe %>
      </div>
      <% end %>
      <br />

      <%= form_for(@user) do |form| %>

      <div class="input-group">
        <%= form.label(:email, class: 'input-group__label') %>
        <%= form.text_field(:email, class: 'input-group__field', placeholder: 'e.g.  me@epfl.ch') %>
      </div>
      <div class="input-group">
        <%= form.label(:name, class: 'input-group__label') %>
        <%= form.text_field(:name, class: 'input-group__field', placeholder: 'Bob') %>
      </div>
      <div class="input-group">
        <%= form.label(:avatar_url, class: 'input-group__label') %>
        <%= form.text_field(:avatar_url, class: 'input-group__field') %>
      </div>
      <div class="input-group">
        <%= form.label(:role, class: 'input-group__label') %>
        <%= form.select(:role, %w(registered admin), {}, class: 'input-group__field') %>
      </div>

      <div class="prompt">
        <%= form.submit( class: 'btn btn--primary prompt__confirm') %>
      </div>
      <% end %>
    </main>
  </section>
</main>
