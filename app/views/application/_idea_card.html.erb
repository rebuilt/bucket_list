<div class="card">
  <div class="card__thumb">
    <%= link_to(idea_path(idea)) do %>
      <%= render(partial: "idea_photo", locals: {photo_url: photo_url}) %>
    <% end %>
    <div class="card__intro">
      <h4 class="card__title"><%= title    %></h4>
      <span><%= done_count %> have done this.</span>
    </div>
  </div>
  <div class="card__footer">
    <button class="card__btn card__like delta" data-like="see-the-northern-lights">
      <svg class="icon-heart icon-heart--liked" role="presentation">
        <use href="/images/icons/icons-defs.svg#heart"></use>
      </svg>
      Like
    </button>
    <% if(@user.present?) %>
      <%= form_tag(user_goals_path(@user)) do %>
        <%= hidden_field_tag('idea_id', idea.id) %>
        <%= button_tag(class: 'btn delta', type: 'submit', disabled: @disable_add_goal) do %>
          <svg class="icon-heart icon--sm" role="presentation">
            <use xlink:href="/images/icons-defs.svg#heart" />
          </svg>
          Add
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
